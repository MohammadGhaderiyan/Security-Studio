<mvvm:SsView x:Class="SecurityStudio.Module.Tool.Bully.View.SsBullyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="clr-namespace:SecurityStudio.Base.Main.Mvvm;assembly=SecurityStudio.Base.Main"
             xmlns:layout="clr-namespace:SecurityStudio.Base.Control.Layout;assembly=SecurityStudio.Base.Control"
             xmlns:wpf="clr-namespace:SecurityStudio.Base.Main.Wpf;assembly=SecurityStudio.Base.Main"
             xmlns:label="clr-namespace:SecurityStudio.Base.Control.Label;assembly=SecurityStudio.Base.Control"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <layout:SsLayoutControl>
        <layout:SsGroupBoxLayoutGroup Header="{wpf:SsBinding Path=Title}"
                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <layout:SsLayoutItem VerticalAlignment="Center" HorizontalAlignment="Center">
                <label:SsTitleLabel Content="{wpf:SsBinding Path=Title}" />
            </layout:SsLayoutItem>
        </layout:SsGroupBoxLayoutGroup>
    </layout:SsLayoutControl>
</mvvm:SsView>